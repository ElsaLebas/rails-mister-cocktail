<h1><%= @cocktail.name %></h1>

<%= link_to "back to list", root_path %>


<%= link_to new_cocktail_dose_path(@cocktail) do %>
    Add a dose
<% end %>
<% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= link_to 'DELETE', dose_path(dose), method: :delete, data: {confirm: "Are you sure ?"} %>
<% end %>

<%= render "doses/new"  %>
